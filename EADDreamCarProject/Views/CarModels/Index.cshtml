@model IEnumerable<EADDreamCarProject.Models.CarModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-hover table-bordered table-danger">
    <tr>

        <th>
            Model Picture
        </th>
        <th>
            Company Name
        </th>
        <th>
            Model Name
        </th>
        <th>
            Model Price
        </th>
        <th>
            Model Description
        </th>
        <th>
            Model Engine Capacity
        </th>
        <th>
            Model Fuel Type
        </th>
        <th>Actions</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img height="100px" width="100px" src="@Url.Content(item.CarModelPicture)" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Company.CompanyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CarModelName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CarModelPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CarModelDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CarModelEngineCapacity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CarModelFuelType)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.CarModelID }) |
            @Html.ActionLink("Details", "Details", new { id = item.CarModelID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.CarModelID })
        </td>
    </tr>
}

</table>
