<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DreamCar - Admin Template</title>
    <!-- BOOTSTRAP STYLES-->
    <link href="~/Content/AdminTemplate/assets/css/bootstrap.css" rel="stylesheet" />
    <!-- FONTAWESOME STYLES-->
    <link href="~/Content/AdminTemplate/assets/css/font-awesome.css" rel="stylesheet" />
    <!-- MORRIS CHART STYLES-->
    <link href="~/Content/AdminTemplate/assets/js/morris/morris-0.4.3.min.css" rel="stylesheet" />
    <!-- CUSTOM STYLES-->
    <link href="~/Content/AdminTemplate/assets/css/custom.css" rel="stylesheet" />
    <!-- GOOGLE FONTS-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
</head>
<body>
    <div id="wrapper">
        <nav class="navbar navbar-default navbar-cls-top " role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand"  href="">Admin Panel</a>
            </div>
            <div style="color: white;
                padding: 15px 50px 5px 50px;
                float: right;
                font-size: 16px;">&nbsp; <a href="@Url.Action("IndexCustomer","Home")" class="btn btn-danger square-btn-adjust">Logout</a> </div>
        </nav>
        <!-- /. NAV TOP  -->

        <nav class="navbar-default navbar-side" style="background-color:maroon;" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav" id="main-menu">
                   


                    <li>
                        <a href="@Url.Action("IndexAdmin","Home")"><i class="fa fa-calendar fa-3x"></i> Dashboard</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Admins")"><i class="fa fa-user fa-3x"></i> Manage Admin Accounts</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Companies")"><i class="fa fa-building-o fa-3x"></i> Manage Companies</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","CarModels")"><i class="fa fa-truck fa-3x"></i> Manage Car Models</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Showrooms")"><i class="fa fa-home fa-3x"></i> Manage Showrooms</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Customers")"><i class="fa fa-user fa-3x"></i> Manage Customers</a>
                    </li>

                </ul>

            </div>

        </nav>
        <!-- /. NAV SIDE  -->

        <div id="page-wrapper">
            <div id="page-inner">
                <div class="row">
                    <div class="col-md-12">
                        <center><h2>Admin Dashboard</h2></center>

                    </div>
                </div>
                <!-- /. ROW  -->
                <hr />



                @RenderBody()


            </div>
            <!-- /. PAGE INNER  -->
        </div>
        <!-- /. PAGE WRAPPER  -->
    </div>
    <!-- /. WRAPPER  -->
    <!-- SCRIPTS -AT THE BOTOM TO REDUCE THE LOAD TIME-->
    <!-- JQUERY SCRIPTS -->
    <script src="~/Content/AdminTemplate/assets/js/jquery-1.10.2.js"></script>
    <!-- BOOTSTRAP SCRIPTS -->
    <script src="~/Content/AdminTemplate/assets/js/bootstrap.min.js"></script>
    <!-- METISMENU SCRIPTS -->
    <script src="~/Content/AdminTemplate/assets/js/jquery.metisMenu.js"></script>
    <!-- MORRIS CHART SCRIPTS -->
    <script src="~/Content/AdminTemplate/assets/js/morris/raphael-2.1.0.min.js"></script>
    <script src="~/Content/AdminTemplate/assets/js/morris/morris.js"></script>
    <!-- CUSTOM SCRIPTS -->
    <script src="~/Content/AdminTemplate/assets/js/custom.js"></script>


</body>
</html>
